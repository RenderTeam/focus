doctype html

.off-canvas-wrap.docs-wrap( data-offcanvas )
  .inner-wrap
    nav.tab-bar
      section.left-small
        a.left-off-canvas-toggle.menu-icon
          span
      section.right.tab-bar-section
        h1.title Pomodoro by RenderTeam
    aside.left-off-canvas-menu
      ul.off-canvas-list
        li
          label Pomodoro
        li
          a( href = '#' ) Numbers
        li
          a( href = '#' ) Graphics
        li
          a( href = '#' ) MembersCards
        li
          a( href = '#' ) Logros
        li
          label Render Github
        li
          a( href = '#' ) MainPage
        li
          a( href = '#' ) ProyectPage
        li
          label Consulting
        li
          a( href = '#' ) Foundation
        li
          a( href = '#' ) Bootstrap
    section.main-section
      .row
          hr
        .row
          .large-9.columns
            .large-12.columns
            |Graphic
            hr
            form
              fieldset
                legend Trabajo de Hoy
                .large-7.columns
                  label
                    | ¿Qué vas a hacer?
                    input(
                      type = 'text'
                      placeholder = 'Breve descripcion de lo que vas a hacer hoy'
                      required
                    )
                .large-4.columns
                  label
                    .name-field
                    | ¿Con Quién?
                    input(
                      type = 'text'
                      placeholder = 'Trabajaras con'
                      pattern = '[a-zA-Z]+'
                      required
                    )
                .large-1.columns
                  label Add
                    button(type='submit').tiny +
            hr
            | Ng-repeat participants
          .large-3.columns
            h5 Let's Work
            ul.side-nav
              li.text-center
                .button.button.radious(ng-click="workNow()")
                  | Let's Work NOW!
              li
                h2.text-center
                  timer(countdown="10", max-time-unit="'minute'", interval="1000"){{mminutes}}:{{sseconds}}
            .large-12.columns.chat
                  //- .panel
                  div(
                    ng-repeat = 'message in messages',
                    class = '{{message.type}}'
                  )
                    div(ng-bind = 'message.username')
                    div(ng-bind = 'message.message')
                    div(ng-bind = 'message.date')

              .row.collapse
                .small-8.columns
                  input(
                    ng-model = 'user.username'
                    type = 'text'
                    placeholder = '¿Quién eres?'
                  )
                .small-2.columns
                  a.button.success.postfix( ng-click = 'addUser()' ) Iniciar chat
                .small-2.columns
                  a.button.alert.postfix( ng-click = 'removeUser()' ) Salir
                .small-8.columns
                  input(
                    ng-model = 'message'
                    type = 'text'
                    placeholder = 'Nanananana....'
                  )
                .small-4.columns
                  a.button.success.postfix( ng-click = 'sendMessage()' ) Send
        footer.row
          .large-12.columns
            hr
            .row
              .large-6.columns
                h6.subheader © RenderTeam
              .large-6.columns
                ul.inline-list.right
